<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bridgelabz.bridgelogin.Register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/editText_regpass"
        android:hint="password"
        android:layout_above="@+id/button_reglog"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="130dp"
        android:layout_alignRight="@+id/editText_regemail"
        android:layout_alignEnd="@+id/editText_regemail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_reglog"
        android:paddingTop="15dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/editText_regemail"
        android:layout_above="@+id/editText_regpass"
        android:layout_alignParentLeft="true"
        android:paddingTop="15dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Emial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="welcome to register page"
        android:id="@+id/textView"
        android:paddingTop="15dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_regemail"
        android:layout_alignEnd="@+id/editText_regemail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/editText_name"
        android:paddingTop="15dp"

        android:layout_above="@+id/editText_regemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_regemail"
        android:layout_alignEnd="@+id/editText_regemail"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_phoneNo"
        android:layout_marginBottom="22dp"
        android:layout_centerVertical="true"
        android:paddingBottom="0dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_regpass"
        android:layout_alignEnd="@+id/editText_regpass"
        android:hint="Phone No" />
</RelativeLayout>
