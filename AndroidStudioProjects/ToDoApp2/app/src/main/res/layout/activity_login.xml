<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaflogin"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:src="@drawable/bridgelabz"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>


    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_email"
        android:padding="5dp"
        android:maxLines="1"
        android:background="@drawable/roundedittext"
        android:id="@+id/EmailEditText"
        android:inputType="textEmailAddress"
        android:imeActionId="@+id/PasswordEditText"
        />


    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_password"
        android:background="@drawable/roundedittext"
        android:padding="5dip"
        android:inputType="textPassword"
        android:maxLines="1"
        android:id="@+id/PasswordEditText"
        android:layout_marginTop="10dp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_forgot"
        android:layout_marginTop="5dp"
        android:id="@+id/ForgotTextview"
        android:onClick="ForgotTextView"
        />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:background="@drawable/loginbtn"
        android:layout_marginLeft="70dp"
        android:onClick="Login"
        android:layout_marginTop="5dp"
        android:id="@+id/loginbtn"
        android:layout_marginRight="70dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/createAccount_Textview"
        android:text="@string/register_textView"
        android:textAlignment="center"
        android:onClick="Register"
        android:textSize="15dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook"
        android:id="@+id/fb"
        android:onClick="FacebookButton"

        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:clickable="true"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textAlignment="center"

        />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/googlesignin"
        android:onClick="GoogleButton"
        android:id="@+id/google"

        />


</LinearLayout>